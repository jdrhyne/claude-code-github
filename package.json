{
  "name": "@jdrhyne/claude-code-github",
  "version": "1.0.1",
  "description": "An MCP server for Claude Code that automates your Git workflow, from local commits to GitHub pull requests",
  "main": "dist/index.js",
  "bin": {
    "claude-code-github": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run build && vitest",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:e2e": "npm run build && vitest run --config vitest.config.e2e.ts",
    "test:e2e:local": "npm run build && vitest run --config vitest.config.e2e.ts",
    "test:coverage": "npm run build && vitest --coverage --config vitest.config.unit.ts",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "mcp-server",
    "git",
    "github",
    "automation",
    "development",
    "workflow",
    "commit",
    "pull-request",
    "version-control",
    "developer-tools",
    "cli",
    "ai-assistant"
  ],
  "author": "JD Rhyne <jd@rhyne.dev>",
  "license": "MIT",
  "homepage": "https://github.com/jdrhyne/claude-code-github#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdrhyne/claude-code-github.git"
  },
  "bugs": {
    "url": "https://github.com/jdrhyne/claude-code-github/issues"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "js-yaml": "^4.1.0",
    "keytar": "^7.9.0",
    "octokit": "^3.1.2",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "!dist/__tests__"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
